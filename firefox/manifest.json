{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.3.0",
  "default_locale": "en",
  "description": "__MSG_extensionDescription__",
  "browser_specific_settings": {
    "gecko": {
      "id": "markdown-viewer@xicilion",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "downloads",
    "tabs",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'",
  "background": {
    "page": "ui/background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*.md",
        "file://*/*.markdown",
        "file://*/*.mermaid",
        "file://*/*.vega",
        "file://*/*.vl",
        "file://*/*.vega-lite",
        "file://*/*.gv",
        "file://*/*.infographic",
        "*://*/*.md",
        "*://*/*.markdown",
        "*://*/*.mermaid",
        "*://*/*.vega",
        "*://*/*.vl",
        "*://*/*.vega-lite",
        "*://*/*.gv",
        "*://*/*.infographic"
      ],
      "js": [
        "core/content-detector.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "ui/styles.css",
    "core/main.js",
    "*.woff2",
    "*.woff",
    "*.ttf",
    "_locales/*/messages.json",
    "themes/font-config.json",
    "themes/registry.json",
    "themes/presets/*.json",
    "themes/table-styles/*.json",
    "themes/code-themes/*.json",
    "themes/spacing-schemes/*.json"
  ],
  "browser_action": {
    "default_popup": "ui/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
